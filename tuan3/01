#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    string a,b;
    cin >> a >> b;
    
    cout << a.size() << " " ;
    cout << b.size()<< endl;
    
    cout << a << b << endl;
    
    cout << b[0] ;
    for (int i=1;i<a.size();i++){
        cout << a[i];
    }
    cout << " ";
    
    cout <<a[0];
    for (int j=1;j<b.size();j++){
        cout << b[j];
    }
    return 0;
}
